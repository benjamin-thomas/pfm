{
  "compilerOptions": {
    // Strict options
    "strict": true,
    // "noUnusedLocals": true, // favor eslint warning
    // "noUnusedParameters": true, // favor eslint warning
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true, // Additional safety for array/object access
    "noUncheckedSideEffectImports": true, // Prevent importing modules with side effects without explicit side effect imports
    "verbatimModuleSyntax": true, // Strict import/export syntax validation
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    //
    // Output options
    "target": "es2022",
    "lib": [
      "ES2022"
    ],
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    //
    // Node.js
    "types": [
      "node"
    ],
    //
    // Path mapping
    // "baseUrl": ".",
    "paths": {
      "zod": [ // allow 'zod' dependency to be called from ../shared
        "./node_modules/zod"
      ],
      "@shared/*": [
        "../shared/*"
      ],
      "@src/*": [
        "./src/*"
      ],
    },
  },
  "include": [
    "src/**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}