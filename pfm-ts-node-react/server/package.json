{
  "name": "pfm-server",
  "version": "1.0.0",
  "description": "PFM Server - Node.js TypeScript backend",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "APP_ENV=dev tsx watch src/main.ts",
    "test:server": "APP_ENV=test tsx watch src/main.ts",
    "test": "eslint . && vitest --run",
    "test:ui": "vitest --ui",
    "test:watch": "eslint . && vitest --watch",
    "build": "eslint . && tsc",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "start": "node dist/main.js",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "kysely": "^0.27.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.5",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.35.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
