{
  "name": "pfm-server",
  "version": "1.0.0",
  "description": "PFM Server - Node.js TypeScript backend",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "APP_ENV=dev tsx watch src/index.ts",
    "test": "APP_ENV=test tsx watch src/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "kysely": "^0.27.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}