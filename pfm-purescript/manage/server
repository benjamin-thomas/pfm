#!/bin/bash
set -euo pipefail

# Require APP_ENV to be set
if [ -z "${APP_ENV:-}" ]; then
    echo "Error: APP_ENV environment variable is required (dev|test)"
    exit 1
fi

SCRIPT="import('./output/Server.Main/index.js').then(m => m.main())"

if [ "${DEBUG}" = "1" ]; then
    node --inspect-brk -e "${SCRIPT}"
else
    node -e "${SCRIPT}"
fi